<UserControl x:Class="BabelIm.Views.ConnectingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Focusable="False" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="393" d:DesignWidth="232">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <ProgressBar Grid.Row="0"  IsIndeterminate="True" />

            <TextBlock Grid.Row="1" 
                       FontSize="18" FontWeight="Light"
                       VerticalAlignment="Center" HorizontalAlignment="Center" 
                       Text="Connecting, please wait ..." />
        </Grid>
    </Grid>
</UserControl>
